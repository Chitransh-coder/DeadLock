{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config (Static)",
      "description": "Default build using vcpkg",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "BUILD_SHARED_LIBS": "OFF",
        "CMAKE_LINK_SEARCH_START_STATIC": "ON",
        "CMAKE_LINK_SEARCH_END_STATIC": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Config (Static)",
      "description": "Debug build using vcpkg",
      "binaryDir": "${sourceDir}/build-debug",
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "BUILD_SHARED_LIBS": "OFF",
        "CMAKE_LINK_SEARCH_START_STATIC": "ON",
        "CMAKE_LINK_SEARCH_END_STATIC": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    }
  ]
}
